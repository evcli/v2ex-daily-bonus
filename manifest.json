{
    "manifest_version": 3,
    "name": "V2EX Daily Bonus",
    "version": "1.0",
    "description": "Automatically collect daily login bonus and browse recent topics on V2EX.",
    "permissions": [
        "alarms",
        "tabs",
        "scripting",
        "storage"
    ],
    "options_ui": {
        "page": "options.html",
        "open_in_tab": false
    },
    "host_permissions": [
        "https://www.v2ex.com/*"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_title": "V2EX Daily Bonus",
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    }
}